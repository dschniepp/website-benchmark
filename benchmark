#!/bin/sh
# Penetration Test Shell Script 
# Author: Daniel Schniepp & Christoph Heymann 2013 
# urls.txt seperate urls with line break

#Dir for Logs
dir=`date +%s`
mkdir "logs/$dir"

#URL index
i=0

for url in `cat urls.txt`
do
	ab -n 100 -c 10 -e "logs/$dir/$i.csv" $url >> "logs/$dir/result.log" &
	i=$((i+1))
done
wait

echo "	| Last Build | Best Build  + Date | Change %"
echo "------------------------------------------------------"

for dir_log in `ls logs/`
do
	#cut -d, -f2 logs/2013_01_09_00_27/0.csv | sed 1d
	echo "logs/$dir_log"
done
